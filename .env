# Digital Twin Energy - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://energy:energy@db:5432/energydb
POSTGRES_USER=energy
POSTGRES_PASSWORD=energy
POSTGRES_DB=energydb
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# MQTT CONFIGURATION
# =============================================================================
MQTT_BROKER=mosquitto://mqtt:1883
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=digitaltwin

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30
API_RATE_LIMIT=100
API_MAX_REQUEST_SIZE=10485760  # 10MB

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin
LOG_LEVEL=INFO
METRICS_ENABLED=true

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
MODEL_CACHE_SIZE=100
MODEL_LOAD_TIMEOUT=30
PREDICTION_TIMEOUT=10
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=100

# =============================================================================
# CELERY CONFIGURATION (for background tasks)
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_WORKER_CONCURRENCY=2

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_ENABLED=true
NGINX_PORT=80
NGINX_SSL_PORT=443
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_SMTP_USER=
ALERT_EMAIL_SMTP_PASSWORD=
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=false
RELOAD=false
TESTING=false
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and configure for production deployment
# SECRET_KEY=your-production-secret-key
# POSTGRES_PASSWORD=your-production-db-password
# REDIS_PASSWORD=your-production-redis-password
# GRAFANA_PASSWORD=your-production-grafana-password
# SSL_CERT_PATH=/etc/ssl/certs/digitaltwin.crt
# SSL_KEY_PATH=/etc/ssl/private/digitaltwin.key